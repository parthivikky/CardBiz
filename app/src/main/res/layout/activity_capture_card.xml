<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobellotec.cardbiz.Activity.CaptureCardActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_primary_color">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/left_arrow"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/back"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/home_title"
            style="@style/actionbar_title_layout"
            android:text="Capture Card" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Save"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_front">

            <ImageView
                android:id="@+id/img_front"
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:scaleType="fitXY" />

            <!--<TextView
                android:id="@+id/txt_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Your card's front photo"
                android:textColor="#000000"
                android:textSize="20sp" />-->
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_back">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:scaleType="fitXY" />

            <!--<TextView
                android:id="@+id/txt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Your card's back photo"
                android:textColor="#000000"
                android:textSize="20sp" />-->
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
