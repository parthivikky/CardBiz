<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobellotec.cardbiz.Activity.GroupInfoActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_primary_color">

        <TextView
            android:id="@+id/home_title"
            style="@style/actionbar_title_layout"
            android:text="@string/group_info" />

        <TextView
            android:id="@+id/refresh"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/refresh"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header"
        android:background="#c1392b"
        android:gravity="center_vertical"
        android:clickable="true">

        <TextView
            android:id="@+id/card_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Select a card"
            android:textColor="#ffece4"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/close"
            android:visibility="gone" />
    </LinearLayout>

    <ListView
        android:id="@+id/member_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/view2"
        android:layout_weight="1"
        android:divider="@color/app_secondary_grey_color"
        android:dividerHeight="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/group_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/leave_group_drawable"
            android:gravity="center"
            android:text="Group Code"
            android:textColor="@color/app_primary_color"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/txt_leave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/leave_group_drawable"
            android:gravity="center"
            android:text="Leave Group"
            android:textColor="#e39f5f"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:padding="10dp"/>

    </LinearLayout>

