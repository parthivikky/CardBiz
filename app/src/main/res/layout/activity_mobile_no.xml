<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_primary_color"
    android:orientation="vertical"
    tools:context="com.mobellotec.cardbiz.Activity.MobileNoActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/app_userform_header_color"
        android:gravity="center"
        android:text="Confirm Your Phone"
        android:textColor="@color/app_black_color"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="You're almost done!"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="center_horizontal"
        android:text="Cardbiz will send a one time SMS message to verify your phone number. Please enter your phone number."
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/phone_container"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edit_text"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ed_mobile_number"
            android:paddingLeft="5dp"
            android:textColor="@color/app_secondary_white_color"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="-"
            android:textColor="@color/app_secondary_white_color"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/border_edit_text"
            android:gravity="center_horizontal"
            android:hint="Mobile"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:textColor="@color/app_secondary_white_color"
            android:textColorHint="@color/app_secondary_white_color"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/userform_backgound_color_change"
        android:gravity="center"
        android:padding="7dp"
        android:text="Submit"
        android:textColor="@drawable/button_txt_color" />

    <!--<TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:text="Submit" />
-->
</LinearLayout>
