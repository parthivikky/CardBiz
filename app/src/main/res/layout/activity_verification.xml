<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/app_secondary_white_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/app_primary_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/app_secondary_white_color"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Verify"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="15dp"
        android:textColor="@color/app_primary_color"
        android:text="@string/verify_message"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_primary_color"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="normal"
        android:text="Verification code"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/num1"
            android:windowSoftInputMode="stateVisible"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>

        <EditText
            android:id="@+id/num2"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>

        <EditText
            android:id="@+id/num3"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>

        <EditText
            android:id="@+id/num4"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>

        <!--<EditText
            android:id="@+id/num5"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>

        <EditText
            android:id="@+id/num6"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:maxLength="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/app_secondary_white_color"
            android:background="@drawable/verify_round_corners"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_secondary_white_color"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textColor="@drawable/button_txt_color_register"
            android:text="Back"/>


        <Button
            android:id="@+id/resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/app_secondary_white_color"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textColor="@drawable/button_txt_color_register"
            android:text="Resend code"/>

    </LinearLayout>

    <Button
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_secondary_white_color"
        android:gravity="center"
        android:layout_gravity="right"
        android:textColor="@drawable/button_txt_color_register"
        android:text="Verify"/>


</LinearLayout>